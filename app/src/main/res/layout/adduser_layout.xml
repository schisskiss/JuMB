<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="${relativePackage}.${activityClass}" >

    <EditText
        android:id="@+id/vorname"
        android:hint="Vorname"
        android:textColorHint="#666666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/nachname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/vorname"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:hint="Nachname"
        android:textColorHint="#666666"/>

    <EditText
        android:id="@+id/strasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nachname"
        android:ems="10"
        android:textColor="#000000"
        android:hint="Straße"
        android:textColorHint="#666666"/>

    <EditText
        android:id="@+id/ort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/plz"
        android:ems="10"
        android:textColor="#000000"
        android:hint="Ort"
        android:textColorHint="#666666"/>

    <EditText
        android:id="@+id/festnetz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ort"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="phone"
        android:hint="Festnetz"
        android:textColorHint="#666666"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mobil"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:hint="E-Mail"
        android:textColorHint="#666666"/>

    <EditText
        android:id="@+id/gdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/email"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="date"
        android:digits="0123456789-"
        android:hint="Geburtsdatum"
        android:textColorHint="#666666"/>

    <EditText
        android:id="@+id/mobil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/festnetz"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="phone"
        android:digits="0123456789"
        android:hint="Mobil"
        android:textColorHint="#666666"/>

    <Button
        android:id="@+id/adduser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gdate"
        android:text="Hinzufügen" />

    <EditText
        android:id="@+id/plz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/strasse"
        android:digits="0123456789"
        android:ems="10"
        android:textColor="#000000"
        android:inputType="number"
        android:hint="Plz"
        android:textColorHint="#666666"/>

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/adduser"
        android:text="Beenden" />

</RelativeLayout>