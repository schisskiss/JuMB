        android:paddingRight="10dp"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_below="@+id/tnachname"
        android:layout_alignParentLeft="true"
